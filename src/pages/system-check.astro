---
import Layout from '../layouts/Layout.astro';
---

<Layout title="AxionFlow - System Diagnostics">
	<nav class="border-b border-white/10 bg-[#0F1115]/80 backdrop-blur-md sticky top-0 z-50">
		<div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
			<div class="flex items-center gap-3">
				<a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
					<img src={`${import.meta.env.BASE_URL}/img/logo-menor.png`} alt="AxionFlow" class="h-8 w-auto" />
					<span class="font-mono font-bold text-lg tracking-tight text-white">AxionFlow</span>
				</a>
			</div>
			
			<div class="flex items-center gap-8 text-sm font-medium text-white/60">
				<a href="/" class="hover:text-white transition-colors">‚Üê Return to Index</a>
			</div>
		</div>
	</nav>

	<main class="bg-[#0A0C10] min-h-screen py-24 px-6">
		<div class="max-w-5xl mx-auto">
			<div class="mb-12">
				<div class="font-mono text-[#3B82F6] text-xs mb-4 tracking-widest uppercase">>>> RUNNING_PROCESS: SELF_DIAGNOSTIC</div>
				<h1 class="font-mono text-4xl md:text-5xl font-bold text-white mb-6">System Health Monitor</h1>
				<p class="text-white/60 text-lg max-w-2xl leading-relaxed">
					This is a representation of the AxionFlow Observability Layer. We believe that if you cannot measure your AI pipeline, you cannot trust it.
				</p>
			</div>

			<!-- Dashboard Mockup -->
			<div class="grid lg:grid-cols-3 gap-6">
				<!-- Main Console -->
				<div class="lg:col-span-2 bg-[#0F1115] border border-white/10 rounded-sm overflow-hidden font-mono text-xs md:text-sm">
					<div class="flex items-center justify-between px-4 py-3 border-b border-white/5 bg-[#13161C]">
						<div class="flex gap-2">
							<div class="w-3 h-3 rounded-full bg-[#FF5F56]"></div>
							<div class="w-3 h-3 rounded-full bg-[#FFBD2E]"></div>
							<div class="w-3 h-3 rounded-full bg-[#27C93F]"></div>
						</div>
						<div class="text-white/30">live_monitor.log</div>
					</div>
					<div class="p-6 space-y-3 h-[400px] overflow-y-auto" id="console-output">
						<div class="text-white/50 border-b border-white/5 pb-2 mb-4"># Initiating Deep Packet Inspection...</div>
						
						<div class="flex gap-4">
							<span class="text-white/30 text-[10px] pt-1">10:42:01</span>
							<span class="text-[#3B82F6]">INFO  > Connection to Vector Store [PINECONE_V2] established.</span>
						</div>
						<div class="flex gap-4">
							<span class="text-white/30 text-[10px] pt-1">10:42:02</span>
							<span class="text-[#3B82F6]">INFO  > Validating Schema Embeddings... OK (0.04s)</span>
						</div>
						<div class="flex gap-4">
							<span class="text-white/30 text-[10px] pt-1">10:42:05</span>
							<span class="text-green-500">PASS  > Determinism Check: Entropy < 0.01</span>
						</div>
                        <div class="flex gap-4">
							<span class="text-white/30 text-[10px] pt-1">10:42:05</span>
							<span class="text-[#3B82F6]">INFO  > AST Parsing Module: 142 files scanned.</span>
						</div>
						<div class="flex gap-4">
							<span class="text-white/30 text-[10px] pt-1">10:42:06</span>
							<span class="text-[#F59E0B]">WARN  > Deprecated API version detected in /legacy/wrapper.ts</span>
						</div>
                        <div class="flex gap-4">
							<span class="text-white/30 text-[10px] pt-1">10:42:08</span>
							<span class="text-[#3B82F6]">INFO  > Sanitizing Inputs [OWASP_LLM_01]... OK</span>
						</div>
						<div class="flex gap-4">
							<span class="text-white/30 text-[10px] pt-1">10:42:12</span>
							<span class="text-white">> Awaiting next execution cycle...</span>
						</div>
                        <div class="flex gap-4 animate-pulse mt-4">
                            <span class="text-[#3B82F6] pt-1">_</span>
                        </div>
					</div>
				</div>

				<!-- Sidebar Metrics -->
				<div class="space-y-6">
					<div class="bg-[#0F1115] border border-white/10 p-6">
						<div class="text-xs text-white/40 uppercase mb-2">System Uptime</div>
						<div class="text-3xl font-mono font-bold text-green-500">99.99%</div>
						<div class="w-full bg-white/5 h-1 mt-4">
							<div class="bg-green-500 h-1 w-full"></div>
						</div>
					</div>

					<div class="bg-[#0F1115] border border-white/10 p-6">
						<div class="text-xs text-white/40 uppercase mb-2">Token Velocity</div>
						<div class="text-3xl font-mono font-bold text-white">4.2k <span class="text-sm text-white/40">t/s</span></div>
						<div class="flex items-end gap-1 mt-4 h-8">
							<div class="bg-[#3B82F6] w-2 h-4"></div>
							<div class="bg-[#3B82F6] w-2 h-6"></div>
							<div class="bg-[#3B82F6] w-2 h-3"></div>
							<div class="bg-[#3B82F6] w-2 h-8"></div>
							<div class="bg-[#3B82F6] w-2 h-5"></div>
						</div>
					</div>

                    <div class="bg-[#0F1115] border border-white/10 p-6">
						<div class="text-xs text-white/40 uppercase mb-2">Error Rate</div>
						<div class="text-3xl font-mono font-bold text-[#F59E0B]">0.02%</div>
						<div class="text-xs text-white/30 mt-2">Within SLA limits</div>
					</div>
				</div>
			</div>

			<div class="mt-16 bg-[#3B82F6]/10 border border-[#3B82F6]/20 p-8 flex flex-col md:flex-row items-center justify-between gap-6">
				<div>
					<h3 class="font-mono text-xl font-bold text-white mb-2">Ready for Radical Transparency?</h3>
					<p class="text-white/60 text-sm">We build these dashboards for every client. Stop guessing.</p>
				</div>
                <a href="mailto:kelvin.moraes117@gmail.com" class="px-8 py-3 bg-[#3B82F6] hover:bg-[#2563EB] text-white font-mono font-bold text-sm transition-colors">
                    DEPLOY_MONITORING()
                </a>
			</div>
		</div>
	</main>
</Layout>
