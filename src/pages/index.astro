---
import Layout from '../layouts/Layout.astro';
---

<Layout title="AxionFlow - Engineering First. AI Second.">
	<nav class="border-b border-white/10 bg-[#0F1115]/80 backdrop-blur-md sticky top-0 z-50">
		<div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
			<div class="flex items-center gap-3">
				<img src={`${import.meta.env.BASE_URL}/img/logo-menor.png`} alt="AxionFlow" class="h-8 w-auto" />
				<span class="font-mono font-bold text-lg tracking-tight">AxionFlow</span>
			</div>
			
			<div class="hidden md:flex items-center gap-8 text-sm font-medium text-white/60">
				<a href="#audit" class="hover:text-white transition-colors">Audit</a>
				<a href="#architecture" class="hover:text-white transition-colors">Architecture</a>
				<a href="#philosophy" class="hover:text-white transition-colors">Philosophy</a>
			</div>

			<div>
				<a href="/system-check" class="bg-white/5 hover:bg-white/10 border border-white/10 text-white px-4 py-2 text-sm font-mono transition-colors">
